<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/ivFriend2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/ivFriend1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/ivFriend3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ivFriend2"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/ivFriend4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ivFriend3"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvFriend1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivFriend1"
        android:layout_toRightOf="@+id/ivFriend1"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFriend2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivFriend2"
        android:layout_toRightOf="@+id/ivFriend2"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFriend4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivFriend4"
        android:layout_toRightOf="@+id/ivFriend4"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFriend3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivFriend3"
        android:layout_alignLeft="@+id/tvFriend2"
        android:text="TextView" />

    <Button
        android:id="@+id/btnRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Refresh" />

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnRefresh"
        android:layout_alignBottom="@+id/btnRefresh"
        android:layout_marginLeft="59dp"
        android:layout_toRightOf="@+id/tvFriend4"
        android:text="Location"
        tools:context=".MainActivity" />

    <TextView
        android:id="@+id/tvFriendLoc4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvFriend4"
        android:layout_alignBottom="@+id/tvFriend4"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFriendLoc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivFriend4"
        android:layout_alignLeft="@+id/tvFriendLoc4"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFriendLoc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ivFriend3"
        android:layout_alignLeft="@+id/tvFriendLoc3"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFriendLoc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvFriend1"
        android:layout_alignBottom="@+id/tvFriend1"
        android:layout_alignLeft="@+id/tvFriendLoc2"
        android:text="TextView" />

	<com.google.android.maps.MapView
	    xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/mapview"
	    android:layout_width="200dp"
	    android:layout_height="200dp"
	    android:layout_above="@+id/btnRefresh"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/ivFriend4"
	    android:apiKey="0KE3N30rfqkGhehtzIQsvnXrU50VtMAEmM-q5Vg"
	    android:clickable="true" >

	</com.google.android.maps.MapView>

</RelativeLayout>
