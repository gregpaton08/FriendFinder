<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Location"
        tools:context=".MainActivity" />

    <ImageView
        android:id="@+id/ivFriend2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/ivFriend1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/ivFriend3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ivFriend2"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/ivFriend4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ivFriend3"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/tvFriend1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivFriend1"
        android:layout_toRightOf="@+id/ivFriend1"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFriend2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivFriend2"
        android:layout_toRightOf="@+id/ivFriend2"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFriend4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivFriend4"
        android:layout_toRightOf="@+id/ivFriend4"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvFriend3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivFriend3"
        android:layout_alignLeft="@+id/tvFriend2"
        android:text="TextView" />

</RelativeLayout>
